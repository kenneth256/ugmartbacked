{
  "compilerOptions": {
    "target": "ES2020",               // good for private class fields
    "module": "ESNext",               // safer for Node + ESM
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,                    // enable for better type safety
    "esModuleInterop": true,           // fixes bcrypt import
    "skipLibCheck": true,              // avoid Prisma type errors
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,            // optional; avoid TS errors in legacy code
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
